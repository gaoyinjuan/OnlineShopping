<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.briup.shopping.mapper.ex.AmountEXlMapper">
    <resultMap id="abn" type="com.briup.shopping.bean.ex.AmountEXl">
        <collection property="orders" ofType="com.briup.shopping.bean.Order" select="selectorders" column="id"></collection>
        <collection property="goods" ofType="com.briup.shopping.bean.Goods" column="goods_id" select="selectgoods"></collection>
    </resultMap>
    <select id="findAll" resultMap="abn">
        select s.status statusorders,s.id id from a_status s
    </select>
    <select id="selectorders" resultType="com.briup.shopping.bean.ex.ResultEXl">
        select o.code code,g.goods_id from a_order o,a_go g where o.id=g.order_id and o.status_id=#{id}
    </select>
   <select id="selectgoods" resultType="com.briup.shopping.bean.Goods">
       select * from a_goods where id=#{goods_id}
   </select>
</mapper>